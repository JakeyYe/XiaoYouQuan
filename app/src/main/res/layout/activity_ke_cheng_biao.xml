<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="课表信息"
            android:textColor="#FFF"
            android:textSize="24dp"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@drawable/schedule_title_background"
            android:text=""/>

        <TextView
            android:id="@+id/tv_1"
            style="@style/KeBiao"
            android:text="周一"/>

        <TextView
            android:id="@+id/tv_2"
            style="@style/KeBiao"
            android:text="周二"/>

        <TextView
            android:id="@+id/tv_3"
            style="@style/KeBiao"
            android:text="周三"/>

        <TextView
            android:id="@+id/tv_4"
            style="@style/KeBiao"
            android:text="周四"/>

        <TextView
            android:id="@+id/tv_5"
            style="@style/KeBiao"
            android:text="周五"/>

        <TextView
            android:id="@+id/tv_6"
            style="@style/KeBiao"
            android:text="周六"/>

        <TextView
            android:id="@+id/tv_7"
            style="@style/KeBiao"
            android:text="周日"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/course_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_schedule_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
